<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.softmed.rucodia">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.softmed.rucodia.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.softmed.rucodia.activity.AddProductActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.softmed.rucodia.activity.DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName="com.softmed.rucodia.activity.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.softmed.rucodia.activity.MainActivity" />
        </activity>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="@string/authority"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name="com.softmed.rucodia.activity.CreateOrderActivity"
            android:label="@string/title_activity_create_order"
            android:theme="@style/AppTheme"/>

        <activity android:name="com.softmed.rucodia.activity.LoginActivity"
            android:windowSoftInputMode="stateHidden"
            android:configChanges="locale">
        </activity>

        <service android:name="com.softmed.rucodia.Services.PostOfficeService"
            android:exported="false"/>

        <receiver
            android:name="com.softmed.rucodia.utils.AlarmReceiver"
            android:process=":remote">
        </receiver>
    </application>

</manifest>