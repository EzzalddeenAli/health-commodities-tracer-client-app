<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.softmed.stockapp_staging">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.softmed.stockapp_staging.activities.ComposeNewMessageActivity">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity android:name="com.softmed.stockapp_staging.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.softmed.stockapp_staging.activities.SelectFacilityActivity" />
        <activity
            android:name="com.softmed.stockapp_staging.activities.DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName="com.softmed.stockapp_staging.activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.softmed.stockapp_staging.activities.MainActivity" />
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="@string/authority"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name="com.softmed.stockapp_staging.activities.LoginActivity"
            android:configChanges="locale"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name="com.softmed.stockapp_staging.activities.OrdersList" />
        <activity
            android:name="com.softmed.stockapp_staging.activities.ManagedProductsActivity"
            android:label="@string/title_activity_managed_products"
            android:theme="@style/AppTheme" />
        <activity android:name="com.softmed.stockapp_staging.activities.MessagesActivity" />
        <activity android:name="com.softmed.stockapp_staging.activities.MessagesDialogsActivity" />

        <service android:name="com.softmed.stockapp_staging.services.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <receiver android:name="com.softmed.stockapp_staging.broadcastReceivers.MyBroadcastReceiver"  android:exported="true">
            <intent-filter>
                <action android:name="com.softmed.stockapp_staging.messagingservice.ACTION_MESSAGE_REPLY"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>